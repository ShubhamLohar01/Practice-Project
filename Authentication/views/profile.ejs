<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <title>Profile</title>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-4 inline-block hover:bg-red-600" href="/logout">Logout</a>
        <h3 class="text-3xl mb-5">Hello, <%= user.name %></h3>
        <form method="post" action="/post" class="mb-6">
            <textarea class="resize-none bg-transparent border-2 border-zinc-800 rounded-md w-full p-2 text-white" name="content" placeholder="Write your post here..."></textarea>
            <input class="px-3 w-40 py-2 rounded-md block bg-blue-500 mt-2 hover:bg-blue-600" type="submit" value="Create New Post"/>
        </form>
        <div class="posts w-full max-w-2xl mx-auto">
            <h3 class="text-2xl mb-4">Your Posts</h3>
            <% user.posts.reverse().forEach(function(post){ %>
                <div class="post bg-zinc-800 p-4 rounded-lg mb-4 shadow-lg">
                    <h4 class="text-xl font-semibold mb-2"><%= user.username %></h4>
                    <p class="text-gray-300 mb-4"><%= post.content %></p>
                    <div class="flex space-x-4">
                        <a class="px-3 py-2 bg-green-500 text-white rounded hover:bg-green-600" href="#">Like</a>
                        <a class="px-3 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600" href="#">Edit</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>




