<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Listing</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h3>Edit Your Listing</h3>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation"
                              enctype="multipart/form-data" onsubmit="return confirm('Are you sure you want to update this listing?');">
                            <!-- Title Field -->
                            <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input name="listing[title]" id="title" required value="<%= listing.title %>" type="text" 
                                       class="form-control">
                            </div>

                            <!-- Description Field -->
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea name="listing[description]" id="description" required 
                                          class="form-control" rows="4"><%= listing.description %></textarea>
                            </div>

                            <!-- Image URL Field -->
                            <div class="mb-3">
                                <label for="image" class="form-label">Upload New Image</label>
                                <input name="listing[image]" id="image" 
                               type="file" 
                            class="form-control">
                            </div>

                            <!-- Price Field -->
                            <div class="mb-3">
                                <label for="price" class="form-label">Price</label>
                                <input name="listing[price]" id="price" required value="<%= listing.price %>" type="number" 
                                       class="form-control">
                            </div>

                            <!-- Country Field -->
                            <div class="mb-3">
                                <label for="country" class="form-label">Country</label>
                                <input name="listing[country]" id="country" required value="<%= listing.country %>" type="text" 
                                       class="form-control">
                            </div>

                            <!-- Location Field -->
                            <div class="mb-3">
                                <label for="location" class="form-label">Location</label>
                                <input name="listing[location]" id="location" required value="<%= listing.location %>" type="text" 
                                       class="form-control">
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary w-100">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
